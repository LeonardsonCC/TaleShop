$C = "../Common.ui";

$C.@Container {
  Anchor: (Width: 900, Height: 580);

  #Title {
    Group {
      LayoutMode: Left;
      $C.@Title #TitleLabel { @Text = "Shop Manager"; }
    }
  }

  #Content {
    LayoutMode: Center;

    Group {
      LayoutMode: Top;
      Anchor: (Width: 900, Height: 460);

      Group #ShopRows {
        LayoutMode: Top;
        Anchor: (Height: 400);

        Group #ShopRowTemplate {
          Visible: false;           // important
          LayoutMode: Center;
          Anchor: (Height: 38);

          Label #ShopName {
            Text: "";
            Style: (...$C.@DefaultLabelStyle, RenderBold: true, HorizontalAlignment: Center);
            Anchor: (Width: 200, Height: 24);
          }

          Label #ShopTrades {
            Text: "";
            Style: (...$C.@DefaultLabelStyle, HorizontalAlignment: Center);
            Anchor: (Width: 80, Height: 24, Left: 8);
          }

          Label #ShopNpcStatus {
            Text: "";
            Style: (...$C.@DefaultLabelStyle, HorizontalAlignment: Center);
            Anchor: (Width: 60, Height: 24, Left: 8);
          }

          $C.@TextButton #ShopRenameButton {
            Text: "Rename";
            Anchor: (Width: 150, Height: 28, Left: 8);
          }

          $C.@CancelTextButton #ShopDeleteButton {
            Text: "Delete";
            Anchor: (Width: 120, Height: 28, Left: 6);
          }

          $C.@TextButton #ShopNpcButton {
            Text: "Spawn NPC";
            Anchor: (Width: 180, Height: 28, Left: 6);
          }
        }
      }

      Group #ActionButtons {
        LayoutMode: Center;
        Anchor: (Top: 8, Height: 48);

        Group {
          LayoutMode: Left;
          Anchor: (Height: 48);

          $C.@TextButton #PreviewShopButton {
            Text: "Preview Shop";
            Anchor: (Width: 200, Height: 40);
          }

          Group {
            Anchor: (Width: 12);
          }

          $C.@TextButton #EditButton {
            Text: "Edit Trades";
            Anchor: (Width: 200, Height: 40);
          }
        }
      }
    }
  }
}
